<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/swipe_action_view_background"
    tools:background="@color/accept">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Swipe to Accept"
        android:textSize="22sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/slider"
        android:layout_width="@dimen/swipeView_sliderSize"
        android:layout_height="@dimen/swipeView_sliderSize"
        android:layout_gravity="left"
        android:background="@drawable/white_circle_drawable"
        tools:ignore="RtlHardcoded" />

</FrameLayout>