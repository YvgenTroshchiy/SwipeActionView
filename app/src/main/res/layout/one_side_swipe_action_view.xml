<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/swipe_action_view_background"
    tools:background="@color/accept">

    <ImageView
        android:id="@+id/slider"
        android:layout_width="@dimen/swipeView_size"
        android:layout_height="@dimen/swipeView_size"
        android:layout_gravity="left"
        android:background="@drawable/white_circle_drawable"
        tools:ignore="RtlHardcoded" />

</FrameLayout>